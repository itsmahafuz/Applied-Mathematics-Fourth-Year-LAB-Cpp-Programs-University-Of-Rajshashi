#include <iostream>
#include <cmath>
#include <iomanip>
#include <vector>
using namespace std;

// Define dy/dx = f(x,y)
#define f(x,y) (( (y*y) - (x*x) ) / ( (y*y) + (x*x) ))

int main()
{
    cout.precision(6);
    cout.setf(ios::fixed);

    int n;
    double x0, y0, h, xn;

    // Step 1: Input values
    cout << "Enter the initial value of x: ";
    cin >> x0;
    cout << "Enter the initial value of y: ";
    cin >> y0;
    cout << "Enter the value of x up to which you want to find y: ";
    cin >> xn;
    cout << "Enter the step size h: ";
    cin >> h;

    n = (xn - x0) / h;  // number of steps

    // Arrays using vector
    vector<double> x(n + 1), y(n + 1);

    // Initial values
    x[0] = x0;
    y[0] = y0;

    double k1, k2, k3, k4;

    // Step 2: Iteration using RK4 method
    for (int i = 0; i < n; i++)
    {
        k1 = h * f(x[i], y[i]);
        k2 = h * f(x[i] + h / 2.0, y[i] + k1 / 2.0);
        k3 = h * f(x[i] + h / 2.0, y[i] + k2 / 2.0);
        k4 = h * f(x[i] + h, y[i] + k3);

        // Update y and x
        y[i + 1] = y[i] + (1.0 / 6.0) * (k1 + 2 * k2 + 2 * k3 + k4);
        x[i + 1] = x[i] + h;
    }

    // Step 3: Print results
    cout << "\nThe values of y at different x are:\n";
    for (int i = 0; i <= n; i++)
    {
        cout << "y(" << x[i] << ") = " << y[i] << endl;
    }

    return 0;
}
